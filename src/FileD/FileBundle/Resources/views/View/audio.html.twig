<!-- Rendered audio view -->
<a data-toggle="modal" href="#audioModal{{ id }}" title="{% trans %} file.list.name.view{% endtrans %}"><i class="icon-zoom-in"></i></a>

<script type="text/javascript">
    $(document).ready(function(){
      $("#jquery_jplayer_{{ id }}").jPlayer({
        ready: function () {
          $(this).jPlayer("setMedia", {
            {{ format }}: "{{ asset(link) }}"
          });
        },
        swfPath: "../bundles/filedfile/js/jplayer",
        supplied: "{{ format }}"
      });
    });
  </script>
<!-- Audio Modal -->
				<div id="audioModal{{ id }}" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="audioModal" aria-hidden="true">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
						<h3 id="myModalLabel">{% trans %} file.player.title {% endtrans %}</h3>
					</div>
					<div class="modal-body">
						<div id="jquery_jplayer_{{ id }}" class="jp-jplayer"></div>
						  <div id="jp_container_1" class="jp-audio">
						    <div class="jp-type-single">
						      <div class="jp-gui jp-interface">
						        <ul class="jp-controls">
						          <li><a href="javascript:;" class="jp-play" tabindex="1">{% trans %} file.player.play {% endtrans %}</a></li>
						          <li><a href="javascript:;" class="jp-pause" tabindex="1">{% trans %} file.player.pause {% endtrans %}</a></li>
						          <li><a href="javascript:;" class="jp-stop" tabindex="1">{% trans %} file.player.stop {% endtrans %}</a></li>
						          <li><a href="javascript:;" class="jp-mute" tabindex="1" title="mute">{% trans %} file.player.mute {% endtrans %}</a></li>
						          <li><a href="javascript:;" class="jp-unmute" tabindex="1" title="unmute">{% trans %} file.player.unmute {% endtrans %}</a></li>
						          <li><a href="javascript:;" class="jp-volume-max" tabindex="1" title="max volume">{% trans %} file.player.maxvolume {% endtrans %}</a></li>
						        </ul>
						        <div class="jp-progress">
						          <div class="jp-seek-bar">
						            <div class="jp-play-bar"></div>
						          </div>
						        </div>
						        <div class="jp-volume-bar">
						          <div class="jp-volume-bar-value"></div>
						        </div>
						        <div class="jp-time-holder">
						          <div class="jp-current-time"></div>
						          <div class="jp-duration"></div>
						          <ul class="jp-toggles">
						            <li><a href="javascript:;" class="jp-repeat" tabindex="1" title="repeat">{% trans %} file.player.repeat {% endtrans %}</a></li>
						            <li><a href="javascript:;" class="jp-repeat-off" tabindex="1" title="repeat off">{% trans %} file.player.repeatoff {% endtrans %}  </a></li>
						          </ul>
						        </div>
						      </div>
						      <div class="jp-title">
						        <ul>
						          <li>{{ name }}</li>
						        </ul>
						      </div>
						      <div class="jp-no-solution">
						        <span>{% trans %} file.player.update.title {% endtrans %}  </span>
						      	{% trans %} file.player.update.content {% endtrans %}  
						      </div>
						    </div>
						  </div>
					</div>
					<div class="modal-footer">
						<button class="btn" data-dismiss="modal" aria-hidden="true">{% trans %}file.list.close{% endtrans %}</button>
					</div>
				</div>